<h1><%= link_to @page['name'], @page['link'], :target => '_blank' %> <small>(<%= pluralize(@page['likes'], 'like') %>)</small></h1>
<h4><%= @page['about'] %></h4>
<ul>
<% @posts.each do |post| %>
  <li>
    <%= link_to post.name, post.link, :target => '_blank' %>
    <% if post.respond_to?(:likes) %>
      <small>(<%= pluralize(post.likes['count'], 'like') %>)</small>
    <% end %>
  </li>
<% end %>
</ul>
